{
    "mcpServers": {
        "outris-identity": {
            "command": "npx",
            "args": [
                "-y",
                "mcp-remote",
                "https://mcp-server.outris.com/http",
                "--transport",
                "http-first",
                "--header",
                "Authorization: Bearer YOUR_API_KEY"
            ]
        }
    }
}